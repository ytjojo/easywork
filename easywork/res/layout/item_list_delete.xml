<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
   >

   
    <TextView
        android:id="@+id/tv_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listview_item_marginleft"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="发如雪"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:layout_alignParentBottom="true"
         android:maxLines="1"
        android:singleLine="true"
         android:layout_below="@id/tv_filename"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/listview_item_marginleft"
        android:text="周杰伦周杰伦周杰伦周杰伦周杰伦周杰伦周杰伦周杰伦周杰伦"
        android:textSize="16sp" />

    
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/tv_author"
        android:paddingLeft="10dip"
        android:text="04&apos;45&apos;&apos;"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/listview_item_marginRight"
        android:src="@drawable/ic_menu_delete" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/listview_item_marginleft"
        android:layout_marginRight="@dimen/listview_item_marginRight"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />
 <View
        android:layout_width="3dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/coral" />
</RelativeLayout>